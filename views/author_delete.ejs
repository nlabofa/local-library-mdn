<%include partials/header%>
<div class="col-sm-10">
<h1><%=title%>:<%=author.name%></h1>
<p><%=author.lifespan%></p>
<%if(author_books.length){%>
  <p><strong>Delete the following books before attempting to delete this author.</strong></p>
  <div style='margin-left:20px;margin-top:20px'>
  <h4>Books</h4>
  <dl>
  <% author_books.forEach(function(book){ %>
  <dt>
    <a href="<%=book.url%>"><%=book.title%></a>
    <dd><%=book.summary%></dd>
  </dt>
  <%})%>
  </dl>
  </div>
  <%}else{%>
    <p>Do you want to really delete this Author.</p>
    <form class="" action="" method="post">
      <div class="form-group">
        <input  class="form-control" type="hidden" value="<%=author._id%>"  name="authorid">
      </div>
      <button class=" btn btn-primary" type="submit">Delete</button>
    </form>
    <%}%>
<%include partials/footer%>
