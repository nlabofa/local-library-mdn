<%include partials/header%>

<div class="col-sm-10">
<h1><%=title%></h1>
<form class="" action="" method="post">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input  class="form-control" type="text" placeholder="First name(Christian)" name="first_name" value="<%= typeof author==='undefined' ? '' : author.first_name %>">
    <label for="family_name">Family Name:</label>
    <input  class="form-control" type="text" placeholder="Family name(Fuchs)" name="family_name" value="<%= typeof author==='undefined' ? '' : author.family_name %>">
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <input  class="form-control" type="date" placeholder="dd/mm/yyyy" name="date_of_birth" value="<%= typeof author==='undefined' ? '' : author.date_of_birth %>">
    <label for="date_of_death">Date of death:</label>
    <input  class="form-control" type="date" placeholder="dd/mm/yyyy" name="date_of_death" value="<%= typeof author==='undefined' ? '' : author.date_of_death %>">
  </div>
  <button class=" btn btn-primary" type="submit">Submit</button>
</form>
<%if(errors){%>
<ul>
<% errors.forEach(function(error){ %>
<li><%=error.msg%></li>
<%	})%>
</ul>
<%}%>
<%include partials/footer%>
